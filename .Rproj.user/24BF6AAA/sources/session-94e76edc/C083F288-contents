  # Shaded rectangle for forecast period
  annotate(
    "rect",
    xmin = forecast_start, xmax = forecast_end,
    ymin = -Inf, ymax = Inf,
    alpha = 0.1, fill = "grey70"
  ) +
  # Shadow behind lines
  geom_line(size = 4, alpha = 0.1, show.legend = FALSE) +
