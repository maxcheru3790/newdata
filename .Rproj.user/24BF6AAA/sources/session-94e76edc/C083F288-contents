colors <- c(
  "Regulation, Governance and Legal Framework" = "#1f77b4",   # Blue
  "Blockchain Technology and Innovation" = "#ff7f0e",        # Orange
  "Cryptocurrency and Digital Assets" = "#2ca02c"            # Green
)

